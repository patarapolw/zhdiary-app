{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "lib": ["es2015", "dom"],
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["./node_modules/@types", "./src/@types"],
        "resolveJsonModule": true
    },
    "include": [
        "./src/**/*"
    ]
}