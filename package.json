    "@types/mongodb": "^3.1.25",
    "@types/uuid": "^3.4.4",
    "better-sqlite3": "^5.4.0",
    "bootstrap": "^4.3.1",
    "bootstrap-vue": "^2.0.0-rc.19",
    "concurrently": "^4.1.0",
    "css-loader": "^2.1.1",
    "electron": "^5.0.1",
    "electron-builder": "^20.40.2",
    "expose-loader": "^0.7.5",
    "file-loader": "^3.0.1",
    "flatpickr": "^4.5.7",
    "jquery": "^3.4.0",
    "jquery-contextmenu": "^2.8.0",
    "mongodb": "^3.2.3",
    "node-sass": "^4.12.0",
    "nodemon": "^1.18.11",
    "open": "^6.1.0",
    "popper.js": "^1.15.0",
    "raw-loader": "^2.0.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "ts-loader": "^5.4.3",
    "typescript": "^3.4.5",
    "uuid": "^3.3.2",
    "vue": "^2.6.10",
    "vue-property-decorator": "^8.1.0",
    "vue-router": "^3.0.6",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.0"
  },
  "scripts": {
    "start": "yarn run serve",
    "dev": "concurrently 'yarn run serve:watch' 'yarn run front:watch'",
    "serve": "node -r esm .",
    "serve:watch": "rimraf build && concurrently 'yarn run tsc:watch' 'wait-on build/server.js && nodemon -w build -r esm build/server.js' 'poetry run python pyserver.py'",
    "front:watch": "rimraf dist && webpack --watch --config webpack.dev.js",
    "build": "yarn run tsc && rimraf dist && webpack --config webpack.prod.js",
    "tsc": "tsc -p src/backend",
    "tsc:watch": "tsc -w -p src/backend",
    "electron:start": "electron .",
    "electron:compile": "rimraf dist && pyinstaller pyserver.py --onefile --noconsole && webpack --config ./webpack.prod.js --progress --colors",
    "electron:build": "rimraf release && yarn run electron:compile && electron-builder"
  },
  "build": {
    "appId": "io.github.patarapolw.zhdiary",
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.education",
      "icon": "icon.png"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "views/**/*",
      "public/**/*",
      "dist/node_modules/**/*"
    ],
    "asarUnpack": [
      "dist/pyserver"
    ]
  }
}
