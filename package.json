    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.1",
    "@types/ejs": "^2.6.3",
    "@types/express": "^4.16.1",
    "@types/hyperscript": "^0.0.3",
    "@types/jsdom": "^12.2.3",
    "@types/node-fetch": "^2.3.2",
    "@types/parsimmon": "^1.10.0",
    "@types/showdown": "^1.9.2",
    "@types/turndown": "^5.0.0",
    "@types/wait-on": "^3.2.0",
    "@types/xregexp": "^3.0.29",
    "appdirs": "^1.1.0",
    "body-parser": "^1.18.3",
    "cheerio": "^1.0.0-rc.3",
    "chinese-to-pinyin": "^0.1.8",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "ejs": "^2.6.1",
    "esm": "^3.2.22",
    "express": "^4.16.4",
    "express-async-handler": "^1.1.4",
    "hyperscript": "^2.0.2",
    "jsdom": "^15.0.0",
    "moment": "^2.24.0",
    "node-fetch": "^2.3.0",
    "parsimmon": "^1.12.0",
    "showdown": "^1.9.0",
    "turndown": "^5.0.3",
    "wait-on": "^3.2.0",
    "xregexp": "^4.2.4"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.8.1",
    "@types/better-sqlite3": "^5.2.3",
