{
    "compilerOptions": {
        "outDir": "../../build",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es6",
        "allowJs": true,
        "lib": ["es2015", "dom"],
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    },
    "include": [
        "**/*"
    ]
}